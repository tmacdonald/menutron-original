<h1>Listing ingredients</h1>

<%= form_for @search, :url => ingredients_path, :html => { :method => :get } do |f| %>
  <%= f.label :name_contains %>
  <%= f.text_field :name_contains %>
  <%= f.submit %>
<% end %>

<%= paginate @ingredients %>

<table>
  <tr>
    <th>Name</th>
    <th>Plural</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= ingredient.name %></td>
    <td><%= ingredient.plural %></td>
    <td><%= link_to 'Show', ingredient %></td>
    <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
    <td><%= link_to 'Destroy', ingredient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ingredient', new_ingredient_path %>
