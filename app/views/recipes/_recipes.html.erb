<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Servings</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.name %></td>
      <td><%= recipe.description %></td>
      <td><%= recipe.servings %></td>
      <td><%= link_to 'Show', recipe %></td>
      <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
      <td><%= link_to 'Destroy', recipe, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
<% end %>
  </tbody>
</table>
<%= paginate @recipes %>
