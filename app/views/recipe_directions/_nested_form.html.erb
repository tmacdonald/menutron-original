<div id="directions">
  <%= form.fields_for :directions do |df| %>
  <div class="direction <%= 'new' if df.object.new_record? %>">
    <% unless df.object.new_record? %>
      <%= df.label :destroy, :class => 'destroy' %>
      <%= df.check_box :_destroy, :class => 'destroy' %>
    <% end %>
    <%= df.text_area :text, :rows => 3, :class => 'text', :placeholder => "Enter some directions" %>
    <%= df.text_field :order, :class => "order" %>
  </div>
  <% end %>
</div> <!-- #directions -->

<script id="direction_template" type="text/template">
  <span class="text">{{ text }}</span><div class="operations"><a class="edit_link">edit</a><a class="delete_link">delete</a></div>
</script>
